<div class="rmu-export-wrapper">

    {{! LEFT COLUMN: SETTINGS }}
    <aside class="settings-sidebar">
        
        {{! 1. Layout Selection }}
        <div class="form-group">
            <label>{{localize "RMU_EXPORT.Dialog.ChooseLayout"}}</label>
            <select name="layout">
                {{#each layouts}}
                    <option value="{{this.id}}" {{#if (eq this.id ../defaultLayout)}}selected{{/if}}>
                        {{localize this.label}}
                    </option>
                {{/each}}
            </select>
        </div>

        {{! 2. Theme Selection }}
        <div class="form-group">
            <label>{{localize "RMU_EXPORT.Dialog.ChooseTheme"}}</label>
            <select name="theme">
                {{#each themes}}
                    <option value="{{this.id}}" {{#if (eq this.id ../defaultTheme)}}selected{{/if}}>
                        {{localize this.label}}
                    </option>
                {{/each}}
            </select>
        </div>

        {{! 3. Format Selection }}
        <div class="form-group">
            <label>{{localize "RMU_EXPORT.Dialog.ChooseFormat"}}</label>
            <select name="format">
                <option value="html">HTML</option>
                <option value="json">{{localize "RMU_EXPORT.Dialog.FormatJSON"}}</option>
            </select>
        </div>

        <div class="rmu-cse-divider">
            <label>{{localize "RMU_EXPORT.Dialog.OptionsLabel"}}</label>
        </div>

        {{! 4. Skill Filter (Special Case) }}
        <div class="form-group">
            <label>{{localize "RMU_EXPORT.Dialog.SkillFilter"}}</label>
            <select name="skillFilter">
                <option value="ranked">{{localize "RMU_EXPORT.Dialog.FilterRanked"}}</option>
                <option value="all">{{localize "RMU_EXPORT.Dialog.FilterAll"}}</option>
            </select>
        </div>

        {{! 5. Dynamic Section Toggles }}
        <div class="toggles-grid rmu-cse-scrollable">
            {{#each sections as |config key|}}
                <div class="form-group options">
                    <label for="sect-{{key}}">{{localize config.label}}</label>
                    <input 
                        class="rmu-cse-checkbox" 
                        type="checkbox" 
                        name="{{key}}" 
                        id="sect-{{key}}"
                        {{#if config.default}}checked{{/if}}
                    />
                </div>
            {{/each}}
        </div>

        <div class="form-footer">
            <button type="submit" class="rmu-export-btn">
                <i class="rmu-cse-icon save"></i>
                {{localize "RMU_EXPORT.Dialog.Download"}}
            </button>
        </div>
    </aside>

    {{! RIGHT COLUMN: PREVIEW (Unchanged) }}
    <div class="preview-panel">
        <div class="preview-header">
            <span>{{localize "RMU_EXPORT.Dialog.Preview"}}</span>
            <span id="preview-status" style="opacity: 0.5;"></span>
        </div>
        <iframe id="rmu-preview-frame" class="preview-frame" title="Export Preview"></iframe>
    </div>

</div>