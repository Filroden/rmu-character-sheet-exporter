<div class="rmu-export-wrapper">

    {{! LEFT COLUMN: SETTINGS }}
    <aside class="settings-sidebar">

        {{! SELECT INPUTS SECTION }}
        <div class="form-group">
            <label>{{localize "RMU_EXPORT.Dialog.ChooseTemplate"}}</label>
            <select name="templatePath">
                {{#each templates}}
                    <option
                        value="{{this.path}}"
                        data-show-skills="{{this.config.showSkillFilter}}"
                        data-show-spells="{{this.config.showSpellFilter}}"
                    >
                        {{localize this.label}}
                    </option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label>{{localize "RMU_EXPORT.Dialog.ChooseFormat"}}</label>
            <select name="format">
                <option value="html">HTML</option>
                <option value="json">{{localize
                        "RMU_EXPORT.Dialog.FormatJSON"
                    }}</option>
            </select>
        </div>

        <div class="form-group" data-id="group-skills">
            <label>{{localize "RMU_EXPORT.Dialog.SkillFilter"}}</label>
            <select name="skillFilter">
                <option value="ranked">{{localize
                        "RMU_EXPORT.Dialog.FilterRanked"
                    }}</option>
                <option value="all">{{localize
                        "RMU_EXPORT.Dialog.FilterAll"
                    }}</option>
            </select>
        </div>

        {{! SECTION DIVIDER }}
        <div class="rmu-cse-divider">
            <label>{{localize "RMU_EXPORT.Dialog.IncludeLabel"}}</label>
        </div>

        {{! TOGGLE SWITCHES SECTION }}
        <div class="form-group options" data-id="group-spells">
            <label for="rmu-show-spells">{{localize
                    "RMU_EXPORT.Dialog.IncludeSpells"
                }}</label>
            <input
                class="rmu-cse-checkbox"
                type="checkbox"
                name="showSpells"
                id="rmu-show-spells"
                checked
                style="margin: 0;"
            />
        </div>

        <div class="form-footer">
            <button type="submit" class="rmu-export-btn">
                <i class="rmu-cse-icon save"></i>
                {{localize "RMU_EXPORT.Dialog.Download"}}
            </button>
        </div>
    </aside>

    {{! RIGHT COLUMN: PREVIEW }}
    <div class="preview-panel">
        <div class="preview-header">
            <span>{{localize "RMU_EXPORT.Dialog.Preview"}}</span>
            <span id="preview-status" style="opacity: 0.5;"></span>
        </div>
        <iframe
            id="rmu-preview-frame"
            class="preview-frame"
            title="Export Preview"
        ></iframe>
    </div>

</div>